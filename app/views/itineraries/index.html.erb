<h1>Public Itinerary List</h1>
<%= link_to "Create Rendezvous", new_itinerary_path %>
<%= link_to "#{current_user.name}", "users/#{current_user.id}" %>

<% @itineraries.each do |itinerary| %>
<% if itinerary.public %>
  <div class="itinerary_list" style="border:1px solid black;">
    <h4><%= link_to itinerary.name, itinerary_path(itinerary) %></h4>
    <img src='<%= itinerary.photo_url %>'>
    <p><b><%= itinerary.start_date %> to <%= itinerary.end_date %></b></p>
    <p><%= itinerary.description %></p>
    <p>Created by: <%= itinerary.user.name %></p>
    <p>Comments (<%= itinerary.comments.size %>)</p>
  </div>
  <% end %>
<% end %>
